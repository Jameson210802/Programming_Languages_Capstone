PROGRAM CODING;
VAR
  CODERS  : INTEGER;
  LIKE    : INTEGER;
BEGIN

    ## asking user for input
  WRITE('Do you like to code? (yes=1/no=0)');
  READ(LIKE);

  WRITE('How many coders does it take to screw in a light bulb?');
  READ(CODERS);

  WRITE(CODERS);
  WRITE(LIKE);
  

  ## While loop based on the amount of coders
 WHILE(CODERS > 0)
    BEGIN
      WRITE('This many coders remain:');
      WRITE(CODERS);

      ## prints out text based on the amount of coders and if the user liked programming

      IF (CODERS = 1) AND (LIKE = 0) THEN
        BEGIN
          WRITE('You are infact not THE Programer.');
          WRITE('Goodbye fake coder.')
        END;
    
      IF (CODERS = 1) AND (LIKE = 1) THEN
        BEGIN
          WRITE('You are THE last coder standing. Enjoy your sleep.');
          SENIORITIS
        END;
    
      CODERS := CODERS - 1
    END;
      

  ## prints out correct answer 
    
  WRITE('The correct answer was..');
  WRITE('Coders do not screw in lightbulbs since they do not like hardware')


END
